<section class="dark" id="home">
    @if (hero is not null)
    {
        <img class="background" src="@(hero.Src)" alt="@(hero.Alt)" />
    }
    <div class="hero-text">
    @if (property is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <h1>@property.Name</h1>
        <h2>@property.Title</h2>
    }
    </div>
    <div class="scroll-arrow-container">
        <a href="#about" class="scroll-arrow">
            <img src="images/down-arrow.svg" class="down-arrow" alt="scroll down" />
        </a>
    </div>
</section>

@code {
    [Parameter, EditorRequired]
    public required HttpClient Http { get; set; }

    [Parameter, EditorRequired]
    public required IHeroImageService HeroImageService { get; set; }

    private SiteProperties? property;
    private HeroImage? hero;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            property = await Http.GetFromJsonAsync<SiteProperties>("sample-data/siteproperties.json");
        }
        catch (System.Text.Json.JsonException)
        {
            property = null;
        }
        catch (HttpRequestException)
        {
            property = null;
        }
        
        hero = await HeroImageService.GetHeroAsync(img => img.Name is "home");
    }
}
